# Auto detect text files and ensure they use LF line endings
* text=auto eol=lf

# Handle common file types explicitly
*.js    text eol=lf
*.jsx   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.json  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf

# Mark lock files as text but keep them consistent
package-lock.json text eol=lf

# Treat images, fonts, binaries as binary (no line ending conversion)
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.svg   binary
*.ico   binary
*.woff  binary
*.woff2 binary
*.ttf   binary
*.eot   binary
*.pdf   binary
